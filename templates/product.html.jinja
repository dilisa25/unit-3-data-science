<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <title>{{ product["Name"] }} - Doughi Sweets</title>
  </head>

  <body class="bg-purple-50 text-neutral-900">

    {% include "components/navbar.html.jinja" %}

    <!-- PAGE CONTAINER -->
    <div class="max-w-7xl mx-auto px-6 py-10">

      <!-- PRODUCT GRID -->
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">

        <!-- LEFT: Product Image -->
        <div class="lg:col-span-4 flex justify-center">
          <img 
            src="{{ product['Image'] }}" 
            alt="{{ product['Name'] }}"
            class="rounded-xl shadow-lg max-w-sm w-full border-4 border-purple-200"
          />
        </div>

        <!-- MIDDLE: Product Info -->
        <div class="lg:col-span-5 space-y-4">

          <h1 class="text-3xl font-bold text-purple-900">
            {{ product["Name"] }}
          </h1>

          <hr class="border-purple-200">

          <p class="text-3xl text-purple-700 font-extrabold">
            ${{ product["Price"] }}
          </p>

          <p class="text-neutral-700 text-lg leading-relaxed">
            {{ product["Description"] }}
          </p>

        </div>

        <!-- RIGHT: Add to Cart -->
        <div class="lg:col-span-3">
          <div class="bg-white p-6 rounded-xl shadow-md border border-purple-200 space-y-6">
            <p class="text-lg font-semibold text-purple-900">
           {{ average_rating }} / 5 ⭐
           </p>


            <p class="text-3xl text-purple-700 font-bold">
              ${{ product["Price"] }}
            </p>

            <form method="post" action="/product/{{ product['ID'] }}/add_to_cart" class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-purple-800 mb-1">
                  Qty
                </label>
                <input 
                  name="Qty" 
                  type="number" 
                  value="1" 
                  min="1" 
                  max="20"
                  class="w-full rounded-lg border border-purple-300 px-3 py-2"
                >
              </div>

              <button 
                class="w-full py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-xl shadow transition">
                Add to Cart
              </button>
            </form>

            <div class="text-sm text-purple-700 text-center">
              Ships fresh from <span class="font-semibold">Doughi Sweets</span>
            </div>

          </div>
        </div>

      </div>

      <!-- REVIEWS SECTION -->
<div class="mt-16">

  <h2 class="text-2xl font-bold text-purple-900 mb-6">
    Customer Reviews
  </h2>

  <!-- Reviews List -->
  <div class="space-y-6 mb-10">

    {% if reviews %}
      {% for review in reviews %}
        <div class="bg-white p-5 rounded-xl shadow border border-purple-200">
          
          <div class="flex items-center justify-between mb-2">
            <p class="font-semibold text-purple-800">
              {{ review["Name"] }}
            </p>
            <p class="text-sm text-neutral-500">
             {{ review["Timestamp"].strftime("%B %d, %Y at %I:%M %p") }}
           </p>
          </div>

          <div class="text-yellow-500 mb-2">
            {% for i in range(review["Rating"]) %}
              ⭐
            {% endfor %}
          </div>

          <p class="text-neutral-700">
            {{ review["Comments"] }}
          </p>

        </div>
      {% endfor %}
    {% else %}
      <p class="text-neutral-600">
        No reviews yet. Be the first to leave one! 
      </p>
    {% endif %}

  </div>

  <!-- Add Review Form -->
  <div class="bg-white p-6 rounded-xl shadow border border-purple-200">

    <h3 class="text-xl font-semibold text-purple-900 mb-4">
      Leave a Review
    </h3>

    <form method="post" action="/product/{{product['ID']}}/review" class="space-y-4">

      <div>
        <label class="block text-sm font-medium text-purple-800 mb-1">
          Rating
        </label>
        <select 
          name="rating" 
          required
          class="w-full rounded-lg border border-purple-300 px-3 py-2"
        >
          <option value="">Select rating</option>
          <option value="5">★★★★★</option>
          <option value="4">★★★★☆</option>
          <option value="3">★★★☆☆</option>
          <option value="2">★★☆☆☆</option>
          <option value="1">★☆☆☆☆</option>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-purple-800 mb-1">
          Comment
        </label>
        <textarea 
          name="comment" 
          rows="4" 
          required
          class="w-full rounded-lg border border-purple-300 px-3 py-2"
        ></textarea>
      </div>

      <button 
        class="w-full py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-xl shadow transition">
        Submit Review
      </button>

    </form>

  </div>

</div>
</body>
</html>
