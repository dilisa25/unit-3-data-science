<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-purple-50 text-neutral-900">

    {% include "components/navbar.html.jinja" %}

    <div class="max-w-7xl mx-auto px-6 py-12">

      <!-- PAGE TITLE -->
      <h1 class="text-4xl font-bold text-purple-900 text-center mb-8">
        Our Sweet Treats
      </h1>

      <!-- CATEGORY FILTER BUTTONS -->
      <div class="flex justify-center gap-4 mb-10 flex-wrap">

        <a href="/browse?category=all"
          class="px-5 py-2 rounded-xl border font-medium shadow
                 {% if category == 'all' %} bg-purple-600 text-white border-purple-600 {% else %} bg-white border-purple-300 text-purple-700 hover:bg-purple-100 {% endif %}">
          All
        </a>

        <a href="/browse?category=cookies"
          class="px-5 py-2 rounded-xl border font-medium shadow
                 {% if category == 'cookies' %} bg-purple-600 text-white border-purple-600 {% else %} bg-white border-purple-300 text-purple-700 hover:bg-purple-100 {% endif %}">
          Cookies
        </a>

        <a href="/browse?category=cupcakes"
          class="px-5 py-2 rounded-xl border font-medium shadow
                 {% if category == 'cupcakes' %} bg-purple-600 text-white border-purple-600 {% else %} bg-white border-purple-300 text-purple-700 hover:bg-purple-100 {% endif %}">
          Cupcakes
        </a>

        <a href="/browse?category=buns"
          class="px-5 py-2 rounded-xl border font-medium shadow
                 {% if category == 'buns' %} bg-purple-600 text-white border-purple-600 {% else %} bg-white border-purple-300 text-purple-700 hover:bg-purple-100 {% endif %}">
          Buns
        </a>

      </div>

      <!-- PRODUCT GRID -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">

        {% for x in products %}
        <a href="/product/{{x['ID']}}" class="bg-white rounded-2xl border border-purple-200 shadow-md p-6 flex flex-col items-center hover:shadow-lg transition h-full">

          <!-- Product Image -->
          <div class="w-full flex justify-center">
            <img 
              src="{{ x['Image'] }}"
              alt="{{ x['Name'] }}"
              class="w-full max-w-xs max-h-72 object-contain rounded-xl border-4 border-purple-200 shadow"
            />
          </div>

          <!-- Name -->
          <h2 class="text-2xl font-semibold text-purple-900 text-center mt-4">
            {{ x["Name"] }}
          </h2>

          <!-- Price -->
          <p class="text-2xl font-bold text-purple-700 mt-2 mb-4">
            ${{ x["Price"] }}
          </p>

        </a>
        {% endfor %}

      </div>

    </div>

  </body>
</html>
