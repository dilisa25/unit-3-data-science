<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Doughi Sweets â€” Home</title>
</head>

<body class="bg-purple-50 text-neutral-900">

    {% include "components/navbar.html.jinja" %}

    <!-- HERO SECTION WITH FLOATING BACKGROUND IMAGE -->
    <section class="relative pt-28 pb-20 overflow-hidden">
        <!-- Background image -->
        <div class="absolute inset-0">
            <img src="/static/background.png" 
                 alt=""
                 class="w-full h-full object-cover opacity-40 transform scale-110 translate-y-4 md:translate-y-8">
            <!-- Overlay gradient for readability -->
            <div class="absolute inset-0 bg-gradient-to-b from-purple-100 to-purple-50 opacity-70"></div>
        </div>

        <!-- Text content -->
        <div class="relative max-w-7xl mx-auto px-6 flex flex-col-reverse md:flex-row items-center z-10">
            <div class="w-full md:w-1/2 mt-10 md:mt-0">
                <h1 class="text-5xl md:text-6xl font-bold text-purple-900 leading-tight drop-shadow-lg">
                    Sweet Treats.<br />
                    Baked With Love.
                </h1>

                <p class="mt-4 text-lg text-purple-700 leading-relaxed drop-shadow-sm">
                    Explore our handcrafted collection of pastries, cookies, and seasonal sweets.
                </p>

                <div class="mt-8">
                    <a href="/browse"
                       class="inline-block bg-purple-700 hover:bg-purple-800 text-white font-semibold px-6 py-3 rounded-lg transition shadow-md hover:shadow-lg">
                        Browse Sweets
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- FEATURED PRODUCTS -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-6">

            <!-- Section Header -->
            <h2 class="text-4xl font-bold text-purple-900 text-center mb-12">
                Featured Sweets
            </h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">

                {% for x in products[:3] %}
                <a href="/product/{{ x['ID'] }}"
                   class="bg-white p-6 rounded-xl shadow-md transition hover:shadow-lg flex flex-col items-center">

                    <!-- Product Image -->
                    <div class="w-full h-64 flex items-center justify-center mb-4">
                        <img
                            src="{{ x['Image'] }}"
                            alt="{{ x['Name'] }}"
                            class="max-h-full max-w-full object-contain rounded-xl"
                        />
                    </div>

                    <h3 class="text-xl font-semibold text-purple-900 text-center">
                        {{ x["Name"] }}
                    </h3>

                    <p class="text-purple-700 mt-1 text-lg font-bold">
                        ${{ x["Price"] }}
                    </p>

                </a>
                {% endfor %}

            </div>
        </div>
    </section>

</body>
</html>
