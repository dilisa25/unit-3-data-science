<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Login</title>
</head>

<body class="bg-purple-50 text-neutral-900">

    {% include "components/navbar.html.jinja" %}

    {% for message in get_flashed_messages() %}
        <li>{{ message }}</li>
    {% endfor %}


    <!-- PAGE CONTAINER -->
    <div class="flex justify-center items-center min-h-screen px-4">

        <div class="bg-white shadow-lg rounded-xl p-8 w-full max-w-md border border-purple-100">

            <h2 class="text-3xl font-bold text-center text-purple-900 mb-6">
                Sign In
            </h2>

            <form method="post">

                <!-- Email -->
                <div class="mb-4">
                    <label class="block text-sm font-semibold mb-1">Email</label>
                    <input name="email" type="email"
                           class="w-full px-4 py-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none"
                           placeholder="Enter your email"
                           required>
                </div>

                <!-- Password -->
                <div class="mb-6">
                    <label class="block text-sm font-semibold mb-1">Password</label>
                    <input name= "password"  required type="password"
                           class="w-full px-4 py-3 border border-purple-200 rounded-lg focus:ring-2 focus:ring-purple-400 focus:outline-none"
                           placeholder="Enter your password"
                           >
                </div>

                <!-- Submit Button -->
                <button type="submit"
                        class="w-full bg-purple-700 hover:bg-purple-800 text-white font-semibold py-3 rounded-lg transition">
                    Log In
                </button>
            </form>

            <!-- Register link -->
            <p class="text-center mt-6 text-sm">
                Don't have an account?
                <a href="/register" class="text-purple-700 font-semibold hover:underline">
                    Create one
                </a>
            </p>
        </div>

    </div>


</html>
